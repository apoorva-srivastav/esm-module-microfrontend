{
  "name": "product-csr",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build && vite --port 4000",
    "build": "vite build --config ./esm-vite.config.js && vite build",
    "serve": "node ./server/index",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vite-plugin-node-polyfills": "^0.11.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "1.0.7",
    "vite": "^3.2.7",
    "vite-plugin-css-injected-by-js": "1.4.0"
  },
  "prettier": {
    "printWidth": 120
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint -c .eslintrc.pre-commit.cjs --fix",
      "prettier --cache --write",
      "git add"
    ],
    "*.{css,md,html,json}": [
      "prettier --cache --write",
      "git add"
    ]
  }
}
